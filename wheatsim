            <script> 
                var wheatCount = 0; 
                var villegarBalance = 0;
                function clicker() 
                { 
                wheatCount+=1; 
                document.getElementById("output").innerHTML = ("Wheat Balance:" + wheatCount);
                } 
                function villager() {
                increaseVillegar = setInterval(clicker,1000);
                villegarBalance+=1;
                document.getElementById("villegarCount").innerHTML = ("Villegar Balance:" + villegarBalance);

                }
            </script>
        </body> 
    </head>
